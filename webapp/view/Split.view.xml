<mvc:View controllerName="app.controller.Split"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <SplitApp >
        <masterPages>
            <Page title="{i18n>homePageTitle}" class="sapUiResponsiveContentPadding">
                <content>
                    <FlexBox direction="Column">
                        <Title text="Split View - Master"/>
                    </FlexBox>
                </content>
            </Page>
        </masterPages>
        <detailPages>
            <Page title="{i18n>homePageTitle}" class="sapUiResponsiveContentPadding">
                <content>
                    <FlexBox direction="Column">
                        <Title text="Split View - Detail"/>
                    </FlexBox>
                </content>
            </Page>
        </detailPages>
    </SplitApp>
</mvc:View>